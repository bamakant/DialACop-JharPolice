<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kiusoftech.dialacop_jharpolice.fragment.FavoriteFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/favorite_fragment_recyclerView">
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:id="@+id/favorite_fragment_empty_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/empty_favorite"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/favorite_fragment_empty_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favorite_fragment_empty_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Empty Favorite List !!!"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:textSize="18sp"/>

</RelativeLayout>
